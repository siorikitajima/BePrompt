        #current {
          position: absolute;
          width: 90%;
          max-width: 800px;
          height: auto;
          margin: 20px auto;
          display: block;
          justify-content: center;
          align-items: center;
          text-align: center;
          top: 50%;
          left: 50%;
          transform: translate(-50%, -50%);
        }
        #current p {
          font-size: 42px;
          font-weight: normal;
          line-height: 1.3em;
          margin: 20px auto;
          color: #CCC;
        }
        #current p#japanese {
          width: 90%;
          font-size: 28px;
          line-height: 1.5em;
          margin: 50px auto 20px auto;
          color: #CCC;
          font-family: "Shippori Mincho", serif;
          font-weight: 400;
          font-style: normal;
        }
        #current #credit {
          margin: 40px auto;
        }
        #current #credit p {
          font-size: 21px;
          font-style: italic;
          font-weight: lighter;
          line-height: 1.5em;
          margin: 10px auto;
          color: #CCC;
        }
        #current #category img {
          width: 80px;
          height: 80px;
          margin: 0 auto;
        }
    </style>

</head>
<body>
      <div id="screen">
        <div id="current">
          <p id="category"><img src="images/life@2x.png" alt="Life"></p>
          <p id="english">“A polaroid disco monster party from the 70s, grainy colorful photographs, print color halftone”</p>
          <p id="japanese">ポラロイドで撮られた、70年代ディスコのモンスターパーティー、ざらっとした質感のカラー写真、ハーフトーン印刷</p>
          <div id="credit">
            <p id="audio">Music: Title of the song by Artist name</p>
          </div>
        </div>
      </div>

<script>
      const promptData = <%- JSON.stringify(promptData) %> ;

      const webSocket = new WebSocket('wss://int.patternbased.com/ws');
      webSocket.onmessage = (event) => {
        console.log(event)
        if(isJson(event.data)) { // If its JSON, parse it
          const msg = JSON.parse(event.data);

          if (msg.Prompt) { // If it has a prompt, display it
            let prompt = '“' + msg.Prompt + '”';
            let credit = 'Music: ' + msg.Audio + ' by ' + msg.Artist;
            let icon;
            if (msg.Category === 'Life') {
              icon = 'images/life@2x.png';
            } else if (msg.Category === 'System') {
              icon = 'images/system@2x.png';
            } else if (msg.Category === 'MonsterParty') {
              icon = 'images/monster@2x.png';
            } else if (msg.Category === 'Misc') {
              icon = 'images/misc@2x.png';
            } else {
              icon = '';
            }
            document.getElementById('english').innerHTML = prompt;
            document.getElementById('japanese').innerHTML = msg.Japanese;
            document.getElementById('audio').innerHTML = credit;
            document.getElementById('category').innerHTML = '<img src="' + icon + '" alt="' + msg.Category + '">';
          
          } else { // If it doesn't have a prompt, do nothing
            console.log("No prompt");
          }
        } else { // If its not JSON, do nothing
          console.log("Not JSON");
        }
      };

      webSocket.addEventListener("open", () => {
        console.log("We are connected");
      });

    function isJson(str) {
      try {
        JSON.parse(str);
      } catch (e) {
        return false;
      }  
      return true;
    }
      </script>
</body>
</html>
